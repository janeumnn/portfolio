---
import '$/styles/index.css';
import type { Props as SEOProps } from 'astro-seo';
import Header from '$/components/header.svelte';
import Status from '$/components/status.astro';
import config from '$/config';
import { SEO } from 'astro-seo';
import { Font } from 'astro:assets';
import { ClientRouter } from 'astro:transitions';
import { Toaster } from 'svelte-sonner';

interface Props {
  seo?: SEOProps;
}

const { seo } = Astro.props;
const { sourceUrl } = config;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <Font cssVariable="--font-jetbrains-mono" preload />
    <SEO {...seo} charset="UTF-8" titleTemplate="%s â€¢ n5n" titleDefault="n5n" />
    <script is:inline>
      const isBrowser = typeof localStorage !== 'undefined';

      const getThemePreference = () => {
        if (isBrowser && localStorage.getItem('color-theme')) {
          return localStorage.getItem('color-theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };

      const theme = getThemePreference();
      document.documentElement.setAttribute('data-theme', theme);

      if (isBrowser) {
        const observer = new MutationObserver(() => {
          const theme = document.documentElement.getAttribute('data-theme');
          localStorage.setItem('color-theme', theme);
        });

        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ['data-theme']
        });

        document.addEventListener('astro:before-swap', (event) => {
          event.newDocument.documentElement.setAttribute('data-theme', getThemePreference());
        });
      }
    </script>
  </head>
  <body class="antialiased">
    <ClientRouter fallback="swap" />
    <Toaster
      client:load
      position="top-center"
      offset={{ top: '30px' }}
      mobileOffset={{ top: '30px', left: '32px', right: '32px' }}
      toastOptions={{
        unstyled: true,
        classes: {
          toast: 'alert shadow-lg text-base-content bg-base-100',
          content: 'flex flex-col gap-1',
          title: 'font-bold text-sm',
          description: 'text-xs opacity-90'
        }
      }}
    />
    <div class="isolate">
      <div class="max-w-screen overflow-x-hidden">
        <div class="flex min-h-dvh min-w-2xs flex-col">
          <main class="@container/main mx-auto flex w-full max-w-3xl grow flex-col p-6 pb-22">
            <slot name="main" />
          </main>
          <div id="footer-sentinel" style="height: 1px;"></div>
          <footer
            class="mx-auto grid h-8 w-full max-w-3xl grid-cols-[1fr_auto_1fr] items-center gap-3 px-6 text-xs text-base-content/80">
            <div class="text-right">
              <a
                role="link"
                class="link-hover"
                href={sourceUrl}
                rel="noopener noreferrer"
                target="_blank"
                aria-label="Go to Source">
                Source
              </a>
            </div>
            <div class="text-center">|</div>
            <div class="text-left">
              <Status server:defer
                ><span slot="fallback" class="cursor-pointer hover:text-error">Status</span></Status
              >
            </div>
          </footer>
        </div>
      </div>
      <Header client:load />
    </div>
  </body>
</html>
